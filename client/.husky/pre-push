#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run build to ensure everything compiles
echo "Building project..."
npm run build

if [ $? -eq 0 ]; then
  echo "✅ Build successful! Safe to push."
else
  echo "❌ Build failed! Please fix errors before pushing."
  exit 1
fi 